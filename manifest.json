{
  "manifest_version": 3,
  "name": "FFC",
  "version": "1",
  "description": "A Chrome extension to track your spending and insults you about it.",
  "permissions": ["activeTab", "scripting", "storage", "webNavigation"],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.nike.com/*",
    "https://cart.ebay.com/*",
    "https://www.bestbuy.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "ffc.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": [
        "https://www.amazon.com/*",
        "https://www.nike.com/*",
        "https://cart.ebay.com/*",
        "https://www.bestbuy.com/*"
      ]
    }
  ]
}
